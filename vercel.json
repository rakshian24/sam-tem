{
	"version": 2,
	"builds": [
	  {
		"src": "api/index.ts",
		"use": "@vercel/node",
		"config": {
		  "includeFiles": ["frontend/build/**"]
		}
	  },
	  {
		"src": "frontend/package.json",
		"use": "@vercel/static-build",
		"config": {
		  "distDir": "frontend/build"
		}
	  }
	],
	"routes": [
	  { "src": "/api/(.*)", "dest": "/api/index.ts" },
	  { "src": "/(.*)", "dest": "/frontend/build/$1" }
	]
  }
  